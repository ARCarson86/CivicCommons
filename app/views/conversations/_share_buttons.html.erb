<div class="share-buttons">

  <div class="share-button">
    <%= link_to embed_conversation_path(@conversation) do %>
      <%= image_tag 'embed_logo.png', width: 40 %>
      <div class="button button-mini tertiary ">Embed</div>
    <% end %>
  </div>

  <div class="share-button">
    <div class="follows">
      <%= @conversation.subscriptions.count %>
    </div>
    <%= render :partial => '/subscriptions/subscription', :locals => {:subscribable => @conversation} %>
  </div>

  <div class="share-button email">
    <img alt="Embed_logo" src="/assets/envelope.png" class="envelope" width="40" />
    <%= link_to "Email", "mailto:?to=&subject=#{u email_share_subject(@conversation)}&body=#{email_share_body(@conversation).html_safe}", class: "button button-mini tertiary", target: "_blank" %>
  </div>

  <div class="share-button twitter">
    <%= render :partial => 'shared/twitter_share', locals: { title: @conversation.title} %>
    <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
  </div>

  <div class="share-button facebook">
    <span id="facebook-like">
      <a href="http://facebook.com/sharer.php?u=<%= request.url %>">Like on Facebook</a>
    </span>
    <script type="text/javascript">
      (function($){
        $(window).load(function(){
          var fb = document.createElement('script'); fb.type = 'text/javascript'; fb.async = true;
          fb.src = (document.location.protocol + '//connect.facebook.net/en_US/all.js#xfbml=1');
          document.getElementsByTagName('head')[0].appendChild(fb);
          $('#facebook-like').replaceWith('<fb:like send="false" layout="box_count" width="60" show_faces="false" ></fb:like>');
        });
      })(jQuery);
    </script>
  </div>

</div>
