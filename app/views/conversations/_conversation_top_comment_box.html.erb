<div class="clearfix inner">

  <div class="what-do-you-think main-content">
    <h2>What do you think?</h2>
    <div class="comment">
      <%= avatar_profile(person, 80, nil) %>
      <div class="name">
        <%= person.name %>
      </div>
      <div class="date">
        on <%= DateTime.now.strftime('%B %d, %Y') %>
      </div>
      <div class="body">
        <%= form_for [@conversation, @top_level_contribution], remote: true do |f| %>
          <div class="editable">
            <%= f.text_area :content, rows: 2 %>
            <div class="contribution-attachments">
              <a href="#" class="add-link button tertiary" rel="link">
                <i class="icon-link icon icon-large"></i>
                <div class="text">
                  Add a link to a related website
                </div>
                <div class="input">
                  <%= f.text_field :url %>
                  <i class="icon-remove-sign icon-large close"></i>
                </div>
              </a>

              <a href="#" class="add-file button tertiary" rel="file">
                <div class="text">
                  <i class="icon-picture icon icon-large"></i> Upload a photograph, document, or other file
                </div>
                <div class="input">
                  <input id="contribution_attachment" name="contribution[attachment]" type="file">
                  <i class="icon-remove-sign icon-large close"></i>
                </div>
              </a>
            </div>
            <div class="contribute-actions">
              <a href="#" class="button tertiary cancel">Cancel</a>
              <%= f.submit "Save", class: "button" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="take-action aside supplementary">
    <div class="take-action-section petitions">
      <div class="take-action-icon petitions"></div>
      <div class="content">
        <div class="title">
          <%= @conversation.petition_actions_count %> Petitions
        </div>
        <div class="links">
          <%= link_to 'View All', conversation_actions_path(@conversation, :anchor => 'opportunity-nav', type:'petition') %>
          |
          <%= link_to 'Create a Petitions', new_conversation_petition_path(@conversation, :anchor => 'opportunity-nav') %>
        </div>
      </div>
    </div>

    <div class="take-action-section votes">
      <div class="take-action-icon votes"></div>
      <div class="content">
        <div class="title">
          <%= @conversation.ballot_actions_count %> Ballots
        </div>
        <div class="links">
          <%= link_to 'View All', conversation_actions_path(@conversation, :anchor => 'opportunity-nav', type:'ballot') %>
          |
          <%= link_to 'Create a Ballot',new_conversation_vote_path(@conversation, :anchor => 'opportunity-nav') %>
        </div>
      </div>
    </div>
  </div>

</div>

<div class="threads-controls">
  <div class="btn-group">
    <a class="button tertiary" rel="expand">Expand All</a>
    <a class="button tertiary active" rel="collapse">Collapse All</a>
  </div>
</div>

