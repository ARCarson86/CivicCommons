<div class="response new-response">
  <div class="author-card mini">
    <a href="#" class="image">
      <img src="http://placehold.it/40x40">
    </a>
    <a href="#" class="name">
      Kyle Balderson
    </a>
    <div class="date">
      on October 10th, 2012
    </div>
  </div>
  <%= form_for [new_contribution.conversation, new_contribution], remote: true, html: {id: "contribution-response-#{parent.id}"} do |f| %>
    <%= f.hidden_field :parent_id, value: parent.id %>
    <div class="content editable">
      <%= f.text_area :content, rows: 2, class: "thread-reply", id: "contribution-content-#{parent.id}" %>
      <div class="contribution-attachments">
        <a href="#" class="add-link button tertiary" rel="link">
          <i class="icon-link icon icon-large"></i>
          <div class="text">
            Add a link to a related website
          </div>
          <div class="input">
            <%= f.text_field :url %>
            <i class="icon-remove-sign icon-large close"></i>
          </div>
        </a>

        <a href="#" class="add-file button tertiary" rel="file">
          <div class="text">
            <i class="icon-picture icon icon-large"></i> Upload a photograph, document, or other file
          </div>
          <div class="input">
            <input id="contribution_attachment" name="contribution[attachment]" type="file">
            <i class="icon-remove-sign icon-large close"></i>
          </div>
        </a>
      </div>
      <div class="contribute-actions">
        <a href="#" class="button tertiary cancel">Cancel</a>
        <%= f.submit "Save", class: "button" %>
      </div>
    </div>
  <% end %>
</div>
