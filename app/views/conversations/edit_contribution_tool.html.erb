<%= form_for @contribution, :as => :contribution, 
      :url => conversation_contribution_path(@contribution.conversation),
      :remote => true, :method => :put, 
      :html => {:multipart => true},
        do |contribution_form| %>

  <p class="title">Edit your response</p>
  <%= contribution_form.hidden_field(:parent_id) %>

  <fieldset>
    <%= contribution_form.text_area(:content, :placeholder => "Leave a Comment...", :class => 'tinymce') %>

    <a href="#" class="add-link">Add a link to a related website</a>
    <%= contribution_form.text_field(:url, :type => "text", :class => "textbox link hide") %>

    <a href="#" class="add-file">Upload a photograph, document, or other file</a>
    <%= contribution_form.file_field(:attachment, :class => 'hide') %>

  </fieldset>

  <fieldset>
    <%= contribution_form.submit 'Edit my response', :class => 'submit' %>
    <%= link_to "Cancel", conversation_contribution_path(@contribution.conversation, @contribution), :class => 'cancel', :remote => true, :method => :get, 'data-target' => "#show-contribution-#{@contribution.id}" %>
  </fieldset>

<% end %>
