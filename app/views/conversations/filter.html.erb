    <div class="main-content">
      <%= render :partial => 'layouts/create_conversation' %>
      <%= render :partial => '/conversations/conversation_pager', :locals => {:conversations => @conversations} %>
    </div><!-- /.main-content -->

    <div class='aside supplementary'>
      <%= render :partial => '/search/search' %>
      <div class="f-conv">
        <!-- <h3>Featured Conversations</h3> -->
        <div class="mod-content">
          <%= render :partial => '/conversations/filters' %>
        </div>
      </div>

      <div>&nbsp;</div>
      <%= render :partial => '/metro_regions/top_metro_side' %>
      <%= render_recent_items_sidebar %>
    </div><!-- /.aside -->
  </div>
</div>
