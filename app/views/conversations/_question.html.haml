%li
  .article.comment
    .meta
      .comment-type.question
      %a.rating.positive(href="#" title="Rate this comment")=format_rating(postable)
    %img{:src=>"", :alt=>"Question from #{postable.person.name}"}
    %p
      %a{:href=>person_path(postable.person), :title=>"#{postable.person.name}'s Profile"}
        %strong= postable.person.name
      - if postable.askee.nil?
        %span.action asked a question.
      - else
        %span.action asked a question to:
        %a.question_recipient(href="#" title="Frank Jackson's Profile")=postable.askee.name             
    %p.content= postable.content
    %p
      - if person_signed_in?
        %a.button.answer(href="#" title="Answer Question") Answer
      - if can_edit?(postable.owner)
        %a{:href=>"#", :class=>"privileged", :title=>"Delete this comment"} Delete
  %ul
    - postable.posts.order('created_at DESC').each do |post|
      =render :partial => post.postable_type.downcase, :locals => { :postable => post.postable }