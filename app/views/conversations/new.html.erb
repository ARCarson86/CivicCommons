<div class="wrapper">
  <div class="content-container">
    <div class="row">
      <div class="col-8">
        <h1>Start a Conversation<%= " from #{@start_from}: #{@content_item.title}" if @start_from %></h1>

        <%= form_for setup_conversation(@conversation),:url => polymorphic_url([get_path_sym(@content_item), :conversations]), :html =>{:multipart => true} do |conversation| %>
          <%= render :partial => 'conversations/creation_errors', :locals => { :conversation => @conversation, :contributions => @conversation.contributions } %>

          <%= render :partial => 'conversations/conversation_fields', :locals => { :form => conversation } %>

          <%= render :partial => 'contributions/issue_selection_fields', :locals => { :form => conversation, :conversation => @conversation, :issues => Issue.standard_issue, :issue_type => "Issue" } %>

          <p>Get the ball rolling with a comment, question, or maybe a thought-provoking video youâ€™ve already uploaded to YouTube.</p>
          <%= render :partial => 'contributions/contribution_fields', :locals => { :form => conversation, :contributions => @conversation.contributions } %>

          <fieldset class="footer mtl">
            <div class="field-block">
              <label for="permission" class="plain plain-ext">
                <input type="checkbox" class="fl-check" name="permission" />
                I agree that our conversations should be civil, and I commit to support the effort to use The Civic Commons as a place to do so.
              </label>
            </div>
            <div class="field-block mtl">
              <%= conversation.submit 'Start My Conversation', :class => 'submit mln js-modal-launch-1' %>
              <%= link_to "Cancel", root_url %>
            </div>
          </fieldset>

        <% end %>
      </div>
    </div>
  </div>
</div>

