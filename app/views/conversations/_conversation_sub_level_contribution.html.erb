<div class="response <%= css_classes ||= "" %> <%= "moderator-post" if contribution.moderator_post? %>" id="<%= "show-contribution-#{contribution.id}" %>">
  <div class="response-inner">
    <%= render :partial => '/contributions/contribution_aux_actions', locals: {contribution:contribution, is_sub_contribution: true} %>
    <% cache ["sub_level_contribution", contribution.id, contribution.updated_at] do %>
      <%= render :partial => '/user/author_card', locals: {author:contribution.owner, conversation_created_at: contribution.created_at} %>
      <a class="show-contribution" href="#show-contribution-<%= contribution.id %>" title="Show this response">
        <i class="icon-reply"></i>
      </a>
      <div class="content">
        <%= render partial: '/contributions/content', locals: {contribution:contribution} %>
      </div>
    <% end %>
  </div>
</div>
