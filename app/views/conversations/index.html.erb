<% content_for :main do %>
<div class="feature-mast">
<div class="wrapper">
<div class="content-container">
  <%= render :partial => '/articles/featured' %>
</div>
</div>
</div>

<div class="wrapper">
<div class="content-container">
      <h1>Conversations</h1>

      <div class="main-content">
        <h3>Most Recent Conversations</h3>

      <%= render :partial => '/conversations/conversation_pager' %>

      </div><!-- /.main-content -->     
      <div class='aside supplementary'>
        <div class="mod">
          <h3>Northeast Ohio Counties</h3>
          <div class="mod-content">
            <ul class='link-list'>
              <% @regions.each do |r| %>
                <% if r.default? %>
                  <li><%=link_to r.name, "/regions/default"%></li>
                <% else %>
                  <li><%=link_to r.name, r%></li>
                <%end%>
              <%end%>
            </ul>
          </div>
        </div>
      </div><!-- /.aside -->      
  </div>
</div>
     
<% end %>
