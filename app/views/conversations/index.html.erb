<% content_for :main do %>
<div class="feature-mast">
<div class="wrapper">
<div class="content-container">
  <%= render :partial => '/articles/featured' %>
</div>
</div>
</div>

<div class="wrapper">
<div class="content-container">
      <h1>Conversations</h1>

      <div class="main-content">

        <h3>Current Active Conversations</h3>
        <%= render :partial => '/conversations/conversation_band', :locals => {:conversations => @active} %>

        <h3>Popular Conversations</h3>
        <%= render :partial => '/conversations/conversation_band', :locals => {:conversations => @popular} %>

      </div><!-- /.main-content -->     
      <div class='aside supplementary'>
        <div class="mod">
          <h3>Featured</h3>
          <div class="mod-content">
            <%= render :partial => '/conversations/filters' %>
          </div>
        </div>
        <div class="mod">
          <h3>Northeast Ohio Counties</h3>
          <div class="mod-content">
            <ul class='link-list'>
              <% @regions.each do |r| %>
                <% if r.default? %>
                  <li><%=link_to r.name, "/regions/default"%></li>
                <% else %>
                  <li><%=link_to r.name, r%></li>
                <%end%>
              <%end%>
            </ul>
          </div>
        </div>
        <% if @recent_items.size > 0 %>
          <div class="mod">
            <h3>Recent Activity</h3>
            <div class='mod-content'>
              <%= render :partial => 'shared/recent_item', :collection => @recent_items, :as => :recent_item %>
            </div>
          </div>
        <% end %>
      </div><!-- /.aside -->      
  </div>
</div>
     
<% end %>
