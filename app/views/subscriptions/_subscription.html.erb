<% unless current_person && ! subscribable.subscribers.include?(current_person).blank? %>
  <%= render :partial => "subscriptions/notsubscribed", :format => 'html', :locals => {:subscribable_type => subscribable.friendly_name, :subscribable_id => subscribable.id} %>
<% else %>
  <%= render :partial => "subscriptions/subscribed", :format => 'html', :locals => {:subscribable_type => subscribable.friendly_name, :subscribable_id => subscribable.id} %>
<% end %>
