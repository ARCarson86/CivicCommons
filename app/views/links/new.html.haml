- content_for :main_body do
  #new_link
    .tab-strip
      %ul
        %li
          %a(href="#conversations" title="Conversations") Conversations
        %li
          %a(href="#issues" title="Issues") Issues
      .tab-area.input-with-options
        #issues
          %h1 Attach link to issue:
          -@issues.each do |i|
            .issue{:data => {:issue_id => i.id}}
              =i.name
              %input.attach.submit{:type=>"submit", :value=>"Attach"}
        #conversations
          %h1 Attach link to conversation:
          -@conversations.each do |c|
            .conversation{:data => {:conversation_id => c.id}}
              =c.title
              %input.attach.submit{:type=>"submit", :value=>"Attach"}
    #link_form_wrapper
      -form_for @contribution, :url => "/conversations/create_node_contribution" do |l|
        =l.hidden_field(:type)
        =l.hidden_field(:issue_id)
        =l.hidden_field(:conversation_id)
        %p
          =l.label :url
          =l.text_field :url
        %p
          =l.label :description
          =l.text_field :description
        %p
          =l.submit
    = javascript_include_tag 'lib/link-form'
