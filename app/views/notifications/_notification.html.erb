<% @notifications = [] if !@notifications.present? %>
<div class="notification-main notification-<%= @notifications.count > 0 ? "active" : "inactive"%>">
  <span class="notification notification-info dropdown dropdown-toggle"><%= @notifications.present? ? @notifications.count : "0" %></span>
  <ul class="dropdown-menu dropdown-menu-large dropdown-menu-right">
    <% @notifications.each do |notification| %>
      <%= render :partial => "notifications/#{notification.item.class.to_s.underscore}_notification", :locals => {:notification => notification, :item => notification.item} %>
    <% end %>
  </ul>
</div>
<%# end %>
