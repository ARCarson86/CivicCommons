<div class="wrapper">
  <div class="content-container">

    <div class="main-content">
      <%= render :partial => '/actions/action', :collection => @actions %>
    </div><!-- /.main-content -->

    <div class="aside supplementary">
      <p>
        <%= link_to 'Create a Vote',    new_conversation_vote_path(@conversation, :anchor => 'opportunity-nav'), :class => "button wide-button" %>
      </p>
      <p>
        <%= link_to 'Write a Petition', new_conversation_petition_path(@conversation, :anchor => 'opportunity-nav'), :class => "button wide-button" %></li>
      </p>

      <% if @conversation.issues.standard_issue.size > 0 %>
        <%= render :partial => '/conversations/side_issues', :object => @conversation, :as => :conversation %>
      <% end %>
      <%= render :partial => '/shared/opportunity/side_participants', :locals => {participants: @participants} %>
  </div>
</div>

