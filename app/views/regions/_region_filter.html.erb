<%= form_tag metro_region_filter_form_path, :class=>'ui-widget inline-form group region-filter-container' do %>
  <input class="textbox small side-region-filter" name="region-filter-input" />
  <%= hidden_field_tag :metrocode,nil, :class => 'side-metrocode', :id => nil %>
  <input class="submit mls" id="filter" type="submit" value="Filter" />
<% end %>

<script>
  $(function() {
    $( ".side-region-filter" ).autocomplete({
      source:'/search/metro_regions/city',
      select: function(event, ui){
       $('.side-metrocode').val(ui.item.metrocode)
      }
    });
  });
</script>
