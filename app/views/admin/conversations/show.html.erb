<%= link_to "Edit", edit_admin_conversation_path(@conversation) %>
<article>
  <header>
    <h1>
      <%= @conversation.title %>
    </h1>
    <!--%h2= "This Conversation is being moderated by: #{@conversation.moderator.name}"
    -->
  </header>
  <%= render :partial => "/admin/shared/show_meta_info", :locals => {:meta_object => @conversation } %>
  <section>
    <header>
      <h2>Summary:</h2>
    </header>
    <div>
      <%= image_tag @conversation.image.url(:normal) %>
    </div>
    <%= @conversation.summary %>
  </section>
  <section>
    <header>
      <h2>Top Node/Contributions:</h2>
    </header>
    <% @conversation.top_level_contributions.each do |c| %>
      <%= c.person.name + ":" %>
      <br/>
      <%= raw c.content %>
      <hr/>
    <% end %>
  </section>
  <footer>
    <p>
      <%= "This conversation was started at: #{@conversation.created_at}" %>
    </p>
    <p>
      Related Topics:
      <ul>
        <% @conversation.topics.each do |topic| %>
          <li>
            <%= topic.name %>
          </li>
        <% end %>
      </ul>
    </p>
    <p>
      Related Projects:
      <ul>
        <% @conversation.managed_issue.each do |issue| %>
          <li>
            <%= issue.name %>
          </li>
        <% end %>
      </ul>
    </p>
  </footer>
</article>
<br/>
