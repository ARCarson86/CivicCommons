= form_for([:admin, @article], :html => { :multipart => true }) do |f|
  -if @article.errors.any?
    #error_explanation
      %h2= "#{pluralize(@article.errors.count, "error")} prohibited this article from being saved:"
      %ul
        -@article.errors.full_messages.each do |msg|
          %li= msg 

  .field
    = f.label :title 
    %br
    = f.text_field :title

  .field
    = f.label :author
    %br
    = f.text_field :author
  
  .field
    = f.label :description 
    %br
    = f.text_area :description 
  
  .field
    = f.label :link
    %br 
    = f.text_field :link 
  
  .field
    = f.label :video_url
    %br 
    = f.text_field :video_url, :class => "youtube"
    .youtube-thumbnail 
  .field
    = f.label :current 
    %br
    = f.check_box :current 
  
  .field
    = f.label :main 
    %br
    = f.check_box :main 
  
  .field
    = f.label :homepage_article
    %br
    = f.check_box :homepage_article

  .field
    = f.label :conversation_article
    %br
    = f.check_box :conversation_article

  .field
    = f.label :issue_article
    %br
    = f.check_box :issue_article

  -if @article.image.exists? 
    .field
      = f.label "Image Url (looks best at 3:2 ratio)" 
      = image_tag @article.image.url(:mainfeature)
  
  .field
    = f.label "Image Url (looks best at 3:2 ratio)" 
    = f.file_field :image 

  .actions
    = f.submit 

