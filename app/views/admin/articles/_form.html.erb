<%= form_for([:admin, @article], :html => { :multipart => true }) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= "#{pluralize(@article.errors.count, "error")} prohibited this article from being saved:" %>
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li>
            <%= msg  %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :title  %>
    <br/>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :author %>
    <br/>
    <%= f.text_field :author %>
  </div>
  <div class="field">
    <%= f.label :description  %>
    <br/>
    <%= f.text_area :description  %>
  </div>
  <div class="field">
    <%= f.label :link %>
    <br/>
    <%= f.text_field :link  %>
  </div>
  <div class="field">
    <%= f.label :video_url %>
    <br/>
    <%= f.text_field :video_url, :class => "youtube" %>
    <div class="youtube-thumbnail"></div>
  </div>
  <div class="field">
    <%= f.label :current  %>
    <br/>
    <%= f.check_box :current  %>
  </div>
  <div class="field">
    <%= f.label :main  %>
    <br/>
    <%= f.check_box :main  %>
  </div>
  <div class="field">
    <%= f.label :homepage_article %>
    <br/>
    <%= f.check_box :homepage_article %>
  </div>
  <div class="field">
    <%= f.label :conversation_article %>
    <br/>
    <%= f.check_box :conversation_article %>
  </div>
  <div class="field">
    <%= f.label :issue_article %>
    <br/>
    <%= f.check_box :issue_article %>
  </div>
  <% if @article.image.exists?  %>
    <div class="field">
      <%= f.label "Image Url (looks best at 3:2 ratio)"  %>
      <%= image_tag @article.image.url(:mainfeature) %>
    </div>
  <% end %>
  <div class="field">
    <%= f.label "Image Url (looks best at 3:2 ratio)"  %>
    <%= f.file_field :image  %>
  </div>
  <div class="actions">
    <%= f.submit  %>
  </div>
<% end %>
