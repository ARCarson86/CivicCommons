-form_for [:admin, @region], :html =>{:multipart => true}  do |f|
  %p
    =show_errors @region
    =f.label :name
    %br
    =f.text_field :name
    %br
    =f.label :description
    %br
    =f.text_area :description
    %br
    -if @region.image.exists?
      %p= "The Current Image is Located at: #{@region.image.url(:normal)}"

    =f.label :image, "Attach an Image (Looks best at 3:2 ratio)"
    %br
    =f.file_field :image
  .label
    ZipCodes (Separate by line breaks)
  =f.text_area :zip_code_string
  %br
  %p
  .actions
    =f.submit
