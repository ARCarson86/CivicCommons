<h1>Metro Regions</h1>
<table class="topics tablesorter">
  <thead>
    <tr>
      <th>City</th>
      <th>Display Name</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @regions.each do |r| %>
      <tr data-region-id="<%= r.id %>">
        <td>
          <%= r.city_name + ", " + r.province %>
        </td>
        <td>
          <%= r.display_name %>
        </td>
        <% #=link_to r.metro_name, r %>
        <td>
          <%= link_to "(edit)", "/admin/metro_regions/#{r.id}/edit" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
