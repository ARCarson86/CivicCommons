%h2 Edit Person Information
-form_for [:admin, @person], :html => {:multipart => true} do |person|
  - all_errors = @person.errors.full_messages
  - if all_errors.any?
    #error_explanation
      %h2
        = pluralize(all_errors.size, "error")
        prohibited this issue from being saved:
      %ul
        - all_errors.each do |msg|
          %li= msg
  %p
    =person.label :first_name
    %br
    =person.text_field :first_name
    
  %p
    =person.label :last_name
    %br
    =person.text_field :last_name
    
  %p
    =person.label :email
    %br
    =person.text_field :email
    
  %p
    =person.label :avatar, "Image"
    =person.file_field :avatar
    
  %p
    =person.label :admin
    =person.check_box :admin
    
  %p
    =person.label :validated, "Valid"
    =person.check_box :validated
  
  %p
    =person.label :proxy
    =person.check_box :proxy
    
  %p
    =person.submit
%br
=link_to "Back", admin_root_path
