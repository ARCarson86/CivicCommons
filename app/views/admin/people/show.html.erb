<h2>
  <% if @person.avatar.exists? %>
    <%= image_tag @person.avatar.url(:standard) %>
  <% else %>
    No Avatar -
  <% end %>
  <%= @person.name %>
</h2>
<table>
  <tbody>
    <tr>
      <td>Email</td>
      <td>
        <%= @person.email %>
      </td>
    </tr>
    <tr>
      <td>Zip Code</td>
      <td>
        <%= @person.zip_code %>
      </td>
    </tr>
    <tr>
      <td>Proxy?</td>
      <td>
        <%= @person.proxy? ? "Yes" : "No" %>
      </td>
    </tr>
    <tr>
      <td>Admin?</td>
      <td>
        <%= @person.admin? ? "Yes" : "No" %>
      </td>
    </tr>
    <tr>
      <td>Blog Admin?</td>
      <td>
        <%= @person.blog_admin? ? "Yes" : "No" %>
      </td>
    </tr>
    <tr>
      <td>Created At?</td>
      <td>
        <%= @person.created_at? ? "#{@person.created_at}" : "-" %>
      </td>
    </tr>
    <tr>
      <td>Confirmation Sent At?</td>
      <td>
        <%= @person.confirmation_sent_at? ? "#{@person.confirmation_sent_at}" : "-" %>
      </td>
    </tr>
    <tr>
      <td>Confirmed At?</td>
      <td>
        <%= @person.confirmed_at? ? "#{@person.confirmed_at}" : "-" %>
      </td>
    </tr>
    <tr></tr>
  </tbody>
</table>
<p>
  <% if @person.confirmation_token && !@person.proxy? %>
    <%= link_to "Confirm User", confirmation_path(@person, :confirmation_token => @person.confirmation_token) %>
    |
  <% end %>
  <%= link_to "Edit", edit_admin_person_path(@person) %>
  |
  <%= link_to "Back", admin_people_path %>
</p>
