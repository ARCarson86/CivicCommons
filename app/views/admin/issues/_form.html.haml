-form_for [:admin, @issue], :html =>{:multipart => true} do |f|
  =show_errors @issue 
  %p        
    =f.label :name
    %br
    =f.text_field :name

  -if @issue.image.exists?
    = image_tag @issue.image.url(:normal)

  %p
    =f.label :image, "Attach an Image (looks best at 3:2 ratio)"
    %br
    =f.file_field :image
    
  %p
    =f.label :summary
    %br
    =f.text_area :summary
    
  %p
    =f.label :url, "Reference URL"
    =f.text_field :url

  %p
    =f.label :zip_code
    =f.text_field :zip_code
    
  %p
    =f.submit 
