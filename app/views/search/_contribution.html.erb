<div class="result contribution-result">
  <% 
    title =  hit.result.title || "This contribution has no title"
    if(hit.result.conversation_id)
      title = conversations[hit.result.conversation_id][0].title
      user_name = [conversations[hit.result.conversation_id][1].first_name, conversations[hit.result.conversation_id][1].last_name].join(' ')

    %>
      <h4><%= link_to user_name + " said on " + title , conversation_node_path(hit.result) %></h4>
    <% 
      elsif(hit.result.issue_id)

        title = issues[hit.result.issue_id][0].name
        user_name = [issues[hit.result.issue_id][1].first_name, issues[hit.result.issue_id][1].last_name].join(' ')
      %>
      <h4><%= link_to user_name + " said on " + title , issue_node_path(hit.result) %></h4>
    <% end %>
  <p><%= best_hit_description(hit, :content) %></p>
</div>
