<% content_for :header do %>
  <%= auto_discovery_link_tag(:rss, user_url(@user, format: :xml), { :title => "#{@user.name} at The Civic Commons" } ) %>
<% end %>

<%= content_for :main_body do %>

  <div class="wrapper profile">
  	<div class="content-container">
        <h1><%= @user.name %></h1>
  		<div class="main-content">
	   		<div class="offset-1 profile-mast">
	   		  <%= profile_image(@user, 70) %>
	   		  <% unless @user.bio.blank? %>
	   		        <p><%= @user.bio %></p>
	   		  <% end %>
	 		</div>
	  	</div>
  		<div class="aside">
  			<div class="mod call-out">
  				<ul class="profile-extras">
                  <% unless @user.website.blank? %>
                  	<li class="website-profile"><%= link_to @user.website, @user.website %></li>
                   <% end %>
                   <% unless @user.twitter_username.blank? %>
                     	<li class="twitter-profile"><%= link_to "@#{@user.twitter_username}", "http://twitter.com/#!/#{@user.twitter_username}" %></li>
                   <% end %>
                </ul>
  			</div>
  		</div>
  	</div>

    <div class="content-container">

        <div class="main-content">
            <h3>My Recent Activity</h3>
            
            <div class="divided">
                <div class="recent-item contribution">
                    <h4>Title of Contribution</h4>
                    <p><strong>I <a href="#">responded to Parag Jagdale:</a></strong> Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Proin augue nisi, fermentum vitae, imperdiet a, auctor eu, mi.</p>
                    <div class="related-article call-out">
                        <div class="offset-2">
                            <img alt="Parag Jagdale" class="callout" height="40" src="http://gravatar.com/avatar/bbf4cb9d454aee7d129443634a316111?d=404" title="Parag Jagdale" width="40">
                            <p>Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Proin augue nisi, fermentum vitae, imperdiet a, auctor eu, mi. Nulla imperdiet molestie purus. Duis arcu dui, pretium in, molestie id, convallis eget, orci. <strong><a href="#">Continue reading&hellip;</a></strong> </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="divided">
                <div class="recent-item conversation">
                    <h4>Title of Conversation</h4>
                    <p>Conversation content lorem ipsum dolor sit amet&hellip;</p>
                </div>
            </div>
            <div class="divided">
                <div class="recent-item issue">
                    <h4>Title of Issue</h4>
                    <p>Issue content lorem ipsum dolor sit amet&hellip;</p>
                </div>
            </div>
            <div class="divided">
                <div class="recent-item rating">
                    <h4>Title of Article</h4>
                    <p>I rated a <a href="#">response from Josh Walsh</a> as <span class="rating-type">Informative</span></p>
                    <div class="related-article call-out">
                        <div class="offset-2">
                            <img alt="Josh Walsh" class="callout" height="40" src="https://graph.facebook.com/53701656/picture" title="Josh Walsh" width="40">
                            <p>This is a snippet of the response that was rated.</p>
                        </div>
                    </div>
                </div>
            </div>
        
        
        </div>

