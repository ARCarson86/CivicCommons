<%= form_for(@comment) do |f| %>
  <fieldset class="form-group">
    <div class="form-block">
      <%= f.text_area :content, :placeholder=>"Enter your comment" %>
    </div>
    <input id="post_conversable_id" name="post[conversable_id]" type="hidden"></input>
    <input id="post_conversable_type" name="post[conversable_type]" type="hidden"></input>
  </fieldset>
  <fieldset class="footer">
    <%= f.submit 'Save Event', :class => "submit"		 %>
  </fieldset>
<% end %>
