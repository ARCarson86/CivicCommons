<div class="feature-mast feature-mast-hero">
  <div class="wrapper wrapper-hero">
    <% if Rails.env == 'development' || Rails.env == 'staging' %>
      <img width="970" height="330" src="http://com.theciviccommons.stg.s3.amazonaws.com/images/homepage/cc_ig_staging_only.png" />
    <% else %>
      <%= render partial: 'hp_slideshow', locals: {featured_opportunities: @featured_opportunities} if @featured_opportunities.present? %>
    <% end %>
  </div>
</div>

<div class="feature-mast">
  <div class="wrapper">
    <div class="content-container">
      <%= render :partial => '/homepage/hp_search_banner' %>
    </div>
  </div>
</div>

<div class="wrapper">
  <div class="content-container">

    <div class="main-content">
      <%= render partial: 'hp_blog_panels', locals: {blog_posts: @recent_blog_posts} if @recent_blog_posts.present? %>
      <%= render partial: 'hp_conversation_panels' %>
    </div><!-- /.main-content -->

    <div class="aside supplementary">
      <%= render_recent_items_sidebar %>
      <%= link_to image_tag('ads/civility_engaged_ad.png', :class => 'advert', :alt => "Let's Get Engaged"), products_services_path %>
    </div><!-- /.aside -->

  </div><!-- /.content-container -->
</div><!-- /.wrapper -->
