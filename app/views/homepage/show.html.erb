<div class="feature-mast">
  <div class="wrapper">
    <div class="content-container">
      <%= render :partial => '/articles/featured' %>
    </div>
  </div>
</div>

<div class="wrapper">
  <div class="content-container">
    <div class="main-content">
      <h3>Current Active Conversations</h3>
      <%= render :partial => '/conversations/conversation_pager' %>
    </div><!-- /.main-content -->
    <div class="aside supplementary">
      <%= render :partial => '/regions/index' %>
      <% if @recent_items.size > 0 %>
        <div class="mod">
          <h3>Recent Activity</h3>
          <div class='mod-content'>
            <%= render :partial => 'shared/recent_item', :collection => @recent_items, :as => :recent_item %>
          </div>
        </div>
      <% end %>
      <div class="mod">
        <h3>Community Poll</h3>
        <div id="poll_module" class="mod-content">
        </div>
      </div>
    </div><!-- /.aside -->
  </div><!-- /.content-container -->
</div><!-- /.wrapper -->
