<fieldset class="form-group">
  <%= form.label :issues, "Issue(s)" %>
  <table>
    <% Issue.alphabetical.each_slice(2) do |slice| %>
      <tr>
        <% slice.each do |issue| %>
          <td>
            <%= check_box_tag "conversation[issue_ids][]", issue.id, conversation.issues.include?(issue) %>
            <%= issue.name %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </table>
</fieldset>
