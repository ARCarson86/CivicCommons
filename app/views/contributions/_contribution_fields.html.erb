<% content_for :header do %>

  <script type='text/javascript'>
    //<![CDATA[

    $(document).ready(function() {
      $('form').scrubPlaceholderText();
      init_tiny_mce('#conversation_contributions_attributes_0_content');

      new ContributionTool({el: $('.contrib_tool_container').closest('form').parent()});
    }); // end document ready function

    //]]>
  </script>

<% end %>
<div class="popup">
    <div id="mention-note">
      <div id="new">New Feature!</div>
      <div>Mention another person by entering an @ and typing their name. They'll be notified when you post.<%= image_tag('closebox.png') %></div>
    </div>
<fieldset class="contrib_tool_container">
  <%= form.fields_for :contributions, contributions do |f| %>

    <p>
    <%= f.text_area(:content, :placeholder => "Leave a Comment...", :class => 'content') %>
    </p>

    <%= render partial: "contributions/contribution_attachment_fields", locals: { form: f } %>
    <fieldset class="errors">
      <ul class="errors"></ul>
    </fieldset>

  <% end %>

</fieldset>
