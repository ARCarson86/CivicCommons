$("#show-contribution-<%= @contribution.id %> .primary .content").hide().before("<%= j render(partial: "contributions/form", locals: { contribution: @contribution }) %>");
$("#show-contribution-<%= @contribution.id %> .primary .cancel").click(function(event) {
  event.preventDefault();
  $("#show-contribution-<%= @contribution.id %> .primary .content").show();
  $("#show-contribution-<%= @contribution.id %> #edit_contribution_<%= @contribution.id %>").remove();
});
$("#edit-contribution-content-<%= @contribution.id %>").focus();
