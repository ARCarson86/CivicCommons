<div class="contribution-attachments <%= "link" if contribution && contribution.url.present? %> <%= "file" if contribution && contribution.attachment_file_name.present? %>">
  <div href="#" class="add-link button tertiary" rel="link">
    <div class="text">
      <i class="button-icon fa-link fa fa-lg"></i> Add a link to a related website
    </div>
    <div class="input">
      <%= form.text_field :url %>
      <i class="button-icon fa fa-remove fa-lg close"></i>
    </div>
  </div>

  <div href="#" class="add-file button tertiary" rel="file">
    <div class="text">
      <i class="button-icon fa fa-image fa-lg"></i> Upload a photograph, document, or other file
    </div>
    <div class="input">
      <%= form.file_field :attachment %>
      <i class="button-icon fa fa-remove fa-lg close"></i>
    </div>
  </div>
</div>

