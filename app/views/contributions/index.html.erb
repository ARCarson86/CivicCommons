<h1>Listing contributions</h1>

<table>
  <tr>
    <th>Datetime</th>
    <th>Owner</th>
    <th>Parent type</th>
    <th>Parent</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @contributions.each do |contribution| %>
  <tr>
    <td><%= contribution.datetime %></td>
    <td><%= contribution.owner %></td>
    <td><%= contribution.parent_type %></td>
    <td><%= contribution.parent_id %></td>
    <td><%= contribution.content %></td>
    <td><%= link_to 'Show', contribution %></td>
    <td><%= link_to 'Edit', edit_contribution_path(contribution) %></td>
    <td><%= link_to 'Destroy', contribution, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

