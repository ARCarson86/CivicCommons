var _widget = function() {
  var domain = "<%=request.host_with_port%>";
  var link;
  var self = {};
  self.init = function(){
    link = document.getElementById("CivicCommonsWidgit");
    link.setAttribute("href", "http://" + domain + "/links/new?link=" + window.location);
    var url = "http://" + domain + "/images/cc_thumb.jpg";
    var image = document.createElement('img');
    image.setAttribute("src", url);
    image.setAttribute("border", 0);
    link.appendChild(image);
  };
  return self;
}().init();

