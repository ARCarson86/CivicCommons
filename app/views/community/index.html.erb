<% content_for :main_body do %>
<div class="wrapper">
  <div class="content-container">
    <div class="main-content">
      <div class="wide_content" id="PeopleModule">

        <h1>Community</h1>
        <div id="PeopleModule">
          <div style="clear: both;"> 
          <% @people.each do |person| %>
            <div id="<%=person.id %>" class ="buddyimg">
              <div class="img-container" id="imgcontainer_<%= person.id %>">
              <%= link_to (image_tag person.avatar.url(:standard), :alt => "#{person.name}"), person_path(person), :title => person.name %>
              </div>
              <div class="text-container" id="label_#{person.id}">
                <h4><%= link_to person.name, person_path(person)%></h4>
              </div>
            </div>
          <% end %>
          </div>

          <%= will_paginate @people, :previous_label => "Previous", :next_label => "Next" %>
        </div>
      </div>
    </div>

    <div class="aside supplementary">
      <%= render :partial => 'regions/index' %>
    </div>
  </div>
</div>
<% end %>