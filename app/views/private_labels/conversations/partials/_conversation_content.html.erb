<section>
  <div class="row">
    <div class="col-sm-12">
      <% if @conversation.image.present? %>
        <div class="convo-img">
          <%= image_tag @conversation.image.url(:panel) %>
        </div>
      <% end %>
      <%= simple_format @conversation.summary %>

      <% if @conversation.link.present? %>
        <div class="conversation-link">
          Link: <%= link_to @conversation.link, @conversation.link %>
        </div>
      <% end %>
    </div>
  </div>

  <% if @conversation.starter.present? %>
      <div class="convo-starter">
        <h2>Conversation Starter</h2>
        <%= sanitize @conversation.starter %>
      </div>
  <% end %>
</section>
