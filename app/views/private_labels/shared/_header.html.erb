<nav id="header-wrapper" class="navbar navbar-default">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
    <%= link_to '/', class: 'navbar-brand with-borders' do %>
      <%= image_tag Swayze.current_private_label.logo.url(:header) %>
    <% end %>
    <div class="collapse-nav nav-hide">
        <ul class="nav navbar-nav ">
          <% if !current_person %>
              <%= render :partial => 'private_labels/shared/user-profiles/logged_out_mobile' %>
            <% end %>
          <% private_label_pages.each do |page| %>
            <li>
              <%= link_to page.title, page %>
            </li>
          <% end %>
          <li>
            <%= link_to 'Contact', '/contact' %>
          </li>
        </ul>
      </div>
      <div id="pl-search-form" class="hide header-util-item">
        <%= render :partial => 'private_labels/search/search', locals: { filter_type: params[:filter] } %>
