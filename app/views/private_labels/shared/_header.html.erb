        <%- if can? :manage, Swayze.current_private_label %>
          <%= link_to('Admin', private_labels_admin_root_path) %> | 
        <%- end %>
        <%- unless current_person.nil? %>
          <%= link_to_settings(current_person).html_safe %> |
        <%- end %>
        <%= link_to "Logout", destroy_person_session_path, :class => 'user-link' %>
      </div>
        <ul class="nav navbar-nav navbar-right">
          <li id="nav-search" class="left-border">
            <a href="#" id="pl-search"><i class="fa fa-search fa-lg"></i></a>
            
          </li>
          <% if current_person %>
                <%= render :partial => 'private_labels/shared/user-profiles/logged_in' %>
            <% else %>
                <%= render :partial => 'private_labels/shared/user-profiles/logged_out' %>
            <% end %>
            <li class="toggle-btn hidden-md hidden-lg">
              <a href="#" class="toggle-nav"><i class="fa fa-bars fa-2x"></i></a>
