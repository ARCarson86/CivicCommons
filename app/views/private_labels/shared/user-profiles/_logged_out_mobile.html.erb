
  <% if person_signed_in? %>
    <%= surround "Logged in as ", "." do %>
      <%= current_person.email %>
    <% end %>
    <%= precede "Not you? " do %>
      <%= link_to "Logout", destroy_person_session_path %>
    <% end %>
  <% else %>
    <li class="hidden-lg hidden-md hidden-sm">
      <%= link_to 'login', '#', :data => {:'toggle' => 'modal', :'target' => '#loginModal'} %>
    </li>
    <li class="hidden-lg hidden-md hidden-sm">
      <%= link_to 'register', new_person_registration_path %>
    </li>
  <% end %>
