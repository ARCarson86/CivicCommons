<%= form_tag(tos_private_labels_conversation_contribution_path, remote: true, id: 'flag-contribution-form') do  %>
	<p class="label-small">Do you think this post violates The Civic Commons terms of service (<%= link_to 'TOS', terms_url, :target => "_blank" %>)? If so, please give your reason why below and submit to us.</p>

	<div class="form-group">
		<%= hidden_field_tag :contribution, "#{@contribution}" %>
        <div class="flash-notice">
         	<%= flash[:notice]%>
        </div>
	</div>

	<div class="form-group">
		<%= text_area :tos, :reason, :rows => 5, :cols=>40, :class => 'form-control' %>
	</div>

	<div class="modal-footer">
		 <%= submit_tag 'Report Violation', :class=> 'btn-success btn btn-default btn-block' %>
	</div>
<% end %>