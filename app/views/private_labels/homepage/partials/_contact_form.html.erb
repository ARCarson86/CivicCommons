<%= form_for @contact_us_message, url: private_labels_contact_path, id: 'contact-form' do |f| %>
	<h2>Contact Form</h2>
	<div class="form-group required">
    <%= f.label :name %>
		<%= f.text_field :name, class: 'form-control', id: 'contact-name' %>
	</div>
	<div class="form-group required">
    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control', id: 'contact-email' %>
	</div>
	<div class="form-group required">
    <%= f.label :body, "Message:" %>
    <%= f.text_area :body, class: 'form-control', id: 'contact-message', rows: 2 %>
	</div>
  <%= f.submit "Submit", :class => "btn btn-success" %>
<% end %>
