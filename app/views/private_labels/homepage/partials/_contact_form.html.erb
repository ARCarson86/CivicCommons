<%= form_tag private_labels_contact_path, id: 'contact-form' do %>
	<h2>Contact Form</h2>
	<div class="form-group required">
		<label for="contact-name">Name:</label>
		<%= text_field_tag 'contact-name', nil, class: 'form-control' %>
	</div>
	<div class="form-group required">
		<label for="contact-email">Email:</label>
		<%= email_field_tag 'contact-email', nil, class: 'form-control' %>
	</div>
	<div class="form-group required">
		<label for="contact-message">Message:</label>
		<%= text_area_tag 'contact-message', nil, class: 'form-control' %>
	</div>
	<%= submit_tag "Submit", :class => 'btn btn-success' %>
<% end %>