<%= form_for [:private_labels, :admin, @conversation] do |f| %>
  <% if @conversation.errors.any? %>
    <div class="errors">
      <h2><%= pluralize(@conversation.errors.full_messages.count, 'error') %> prohibited this conversation from being saved: </h2>
      <ul>
        <%- @conversation.errors.full_messages.each do |msg| %>
          <%= content_tag :li, msg %>
        <%- end %>
      </ul>
    </div>
  <% end %>

  <fieldset><legend>Meta Information</legend>
    <div class="form-group">
      <%= f.label :page_title %>
      <%= f.text_field :page_title, class: 'form-control' %>
    </div> 

    <div class="form-group">
      <%= f.label :meta_description, 'Page Description' %>
      <%= f.text_area :meta_description, rows: 5, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :meta_tags, 'Page Meta Tags:' %>
      <%= f.text_area :meta_tags, rows: 5, class: 'form-control' %>
    </div>
  </fieldset>

  <fieldset>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class=form-group">
      <%- if @conversation.image.exists? %>
        <%= image_tag @conversation.image.url(:normal) %>
      <%- end %>
      <%= f.label :image, "Attach an Image (looks best at 3:2 ratio)" %>
      <%= f.file_field :image, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :summary %>
      <%= f.text_area :summary, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :starter, "Conversation Starter" %>
      <%= f.text_area :starter, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :link %>
      <%= f.text_field :link, class: 'form-control' %>
    </div>
  </fieldset>

  <%= f.submit class: 'btn btn-default' %>
<% end %>

