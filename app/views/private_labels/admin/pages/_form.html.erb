<%= form_for [:private_labels, :admin, @page], html: { class: "form-horizontal" } do |f| %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Page Content</h3>
    </div>
    <div class="panel-body">
      <div class="form-group">
        <%= f.label :title, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :title, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :content, class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_area :content, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-5 col-sm-offset-2">
          <div class="checkbox">
            <%= f.label :sidebar, class: 'control-label' do %>
              <%= f.check_box :sidebar %>
              Show Sidebar on this page?
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Meta Information</h3>
    </div>
    <div class="panel-body">
      <div class="form-group">
        <%= f.label :meta_title, 'Title', class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :meta_title, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :meta_keywords, 'Keywords', class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :meta_keywords, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :meta_description, 'Description', class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :meta_description, class: "form-control" %>
        </div>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-2 col-sm-offset-10 text-right">
      <%= f.submit "Save", class: 'btn btn-success' %>
    </div>
  </div>
<% end %>
