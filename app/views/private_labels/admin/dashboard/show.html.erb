<div class="page-header"><%= content_tag :h1, "#{Swayze.current_private_label.name} Administration Console" %></div>
<div class="row">
  <div class="col-md-8">
    <table class="table">
      <thead>
        <th>Name</th>
        <th>Email</th>
        <th>Last Active</th>
      </thead>
      <% @admins.each do |person| %>
      <tr>
        <td><%= link_to person.name %></td>
        <td><%= person.email %></td>
        <td><%= last_sign_in(person) %></td>
      </tr>
      <% end %>
    </table>
  </div>
  <div class="col-md-4">
    <div class="row">
      <h2>Contributions</h2>
      <p>Total: <%= @contributions.count %></p>
      <p>Today: <%= @contributions_today.count %></p>
    </div>
    <div class="row">
      <h2>Conversations</h2>
      <p>Total: <%= @conversations.count %></p>
      <p>Started Today: <%= @conversations_starting_today.count %></p>
      <p>Ending Today: <%= @conversations_ending_today.count %></p>
    </div>
  </div>
</div>
