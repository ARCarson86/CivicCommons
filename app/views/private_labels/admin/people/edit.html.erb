<% content_for :header do %>
  <%= stylesheet_link_tag "private_label/admin" %>
<% end %>

<div class="page-header"><%= content_tag :h1, @person.name %></div>
<div class="row">
  <div class="col-md-12">
    <%= form_for [:private_labels, :admin, @person], html: { class: "form-horizontal", multipart: true } do |f| %>
      <%= show_errors @person %>
      <div class="form-group">
        <%= f.label :name, class: "col-sm-2 control-label" %>
        <div class="col-sm-4">
          <%= f.text_field :first_name, class: "form-control", placeholder: 'First' %>
        </div>
        <div class="col-sm-4">
          <%= f.text_field :last_name, class: "form-control", placeholder: "Last" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :email, class: "col-sm-2 control-label" %>
        <div class="col-sm-8"><%= f.email_field :email, class: 'form-control' %></div>
      </div>

      <div class="form-group">
        <%= f.label :zip_code, class: 'col-sm-2 control-label' %>
        <div class="col-sm-8"><%= f.text_field :zip_code, class: 'form-control' %></div>
      </div>

      <div class="form-group">
        <%= f.label :avatar, "Image", class: "col-sm-2 control-label" %>
        <div class="col-sm-4">
          <span class="btn btn-default btn-file btn-sm">
            Browse&hellip; <%= f.file_field :avatar %>
          </span>
        </div>
        <div class="col-sm-4">
          <%= profile_image(@person, 50) %>
        </div>
      </div>

      <%= f.fields_for @person.private_label_people.first do |plf| %>
        <div class="form-group">
          <label class="col-sm-2 control-label">Private Label</label>
          <div class="col-sm-4"><a href="#">Remove from this Private Label</a></div>
          <div class="col-sm-3">
            <%= plf.label :admin do %><%= plf.check_box :admin %> Admin<% end %>
          </div>
        </div>
      <% end %>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-8">
          <%= f.submit class: 'btn btn-primary' %>
        </div>
      </div>

    <% end %>
  </div>
</div>
