<div id="ajax-login-container">
<p>
Please login to continue. If you don't have an account, please <%= link_to 'register', new_person_registration_path %>.
</p>
<%= form_for(:person, :url => '/people/ajax_login', :remote => true, :html => {:id => 'ajax-login-form'}) do |f| %>
  <p class="validation-error"></p>
  <fieldset class="form-group">
    <%= hidden_field_tag 'requested_url', @requested_url %>
    <div class="form-block">
      <%= f.label :email, 'Email:' %>
      <%= f.text_field :email, :placeholder => "me@johnnyappleseed.com" %>
    </div>
    <div class="form-block">
      <%= f.label :password, 'Password:' %>
      <%= f.password_field :password %>
    </div>
  </fieldset>
  <fieldset class="footer">
    <%= f.submit 'Login', :class => 'submit' %>
    or
    <%= link_to 'cancel', '', :onclick => '$.colorbox.close(); return false;', :class => 'cancel' %>
  </fieldset>
<% end %>
</div>
