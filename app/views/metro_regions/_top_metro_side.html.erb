<div class="mod">
  <h3>Filter by Metro Area</h3>
  <%= render :partial => 'regions/region_filter' %>
  <ul class="simple-list block-link-list">
    <%- @top_metro_regions.each do |metro_region| -%>
      <li>
        <%= link_to raw("<span>#{metro_region.display_name}</span>" ), metro_region_filter_url(metro_region.metrocode), :method => :post, :class => (default_region.to_s == metro_region.metrocode ? 'active' : '') %>
        <% if current_region.present? && current_region.metrocode == metro_region.metrocode %>
          <%= link_to image_tag('removex.png'), cancel_metro_region_filter_path, :method => :post, :title => 'Remove filter', :class=> 'remove-filter' %>
        <% end %>
      </li>
    <%- end -%>
  </ul>
</div>
