<div class="mod-content">
  <ul class="link-list">
    <% unless @user.has_conversation_subscriptions? %>
      <li><%= @user.name%> is just getting started</li>
    <% else %>
      <% @user.conversation_subscriptions.each do |conversation| %>
        <li>
          <% if conversation.subscribable.present? %>
            <%= link_to short_title(conversation.title), conversation_path(conversation.subscribable_id) %>
          <% end %>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>
