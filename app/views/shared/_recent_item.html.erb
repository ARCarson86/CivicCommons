<% if @recent_items.size > 0 %>
  <div class="mod">
    <h3>Recent Activity</h3>
    <div class='mod-content'>
      <% @recent_items.each do |recent_item| %>
        <div class='recent-item'>
          <%= render :partial => "shared/recent_items/#{recent_item.class.base_class.name.underscore}", :object => recent_item %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
