
  <% if person_signed_in? %>
    <%= surround "Logged in as ", "." do %>
      <%= current_person.email %>
    <% end %>
    <%= precede "Not you? " do %>
      <%= link_to "Logout", destroy_person_session_path %>
    <% end %>
  <% else %>
    <li class="left-border">
      <a class="cc-login-btn" href="/people/login">Login</a>
    </li>
    <li class="with-borders">
      <%= link_to 'register', registrations_principles_path %>
    </li>
  <% end %>
