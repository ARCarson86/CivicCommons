%html
  %head
    %title Civiccommons
    = javascript_include_tag 'jquery-1.4.2.min'
    = javascript_include_tag 'modernizr-1.5.min'
    = javascript_include_tag 'rails'
    = javascript_include_tag 'placeholder'
    = javascript_include_tag 'master'
    = javascript_include_tag 'chosen_issues'
    :plain
      <!--[if gte IE 7]><!-->
      <link media="screen, projection" rel="stylesheet" href="/stylesheets/screen.css" type="text/css" />
      <!--<![endif]-->
