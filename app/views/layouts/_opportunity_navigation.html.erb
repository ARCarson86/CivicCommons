  } %>
  <%= render partial: '/layouts/opportunity_navigation_item', locals: {
    active: opportunity_navigation_item_selected?('reflections'),
    title: 'Reflect',
    link: conversation_reflections_path(conversation),
    count: reflections_count
  } %>
</div>
