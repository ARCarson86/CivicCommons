    active: opportunity_navigation_item_selected?('conversations'),
    title: 'Talk',
    link: conversation_path(conversation),
    count: participants_count
  } %>
  <%= render partial: '/layouts/opportunity_navigation_item', locals: {
    active: opportunity_navigation_item_selected?('actions'),
    title: 'Take Action',
    link: conversation_actions_path(conversation),
