#user
  - if person_signed_in?
    = surround "Logged in as ", "." do
      = current_person.email
    = precede "Not you? " do
      = link_to "Logout", destroy_person_session_path
  - else
    %p
      %a{:class => "cc-login-btn", :href => "/people/login"} Login
    or
    %a{:href => "/principles.html"} register for an account