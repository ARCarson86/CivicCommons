#user
  - if person_signed_in?
    - surround "Signed in as ", "." do
      = current_person.email
    - precede "Not you? " do
      = link_to "Sign out", person_session_destroy_path
  - else
    = succeed " |" do
      = link_to "Sign in!", person_session_new_path
    = link_to "Sign up!", new_person_registration_path
%p.notice= notice
%p.alert= alert
.section
  = yield

