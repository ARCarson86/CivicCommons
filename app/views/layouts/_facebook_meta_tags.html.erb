<% if not @conversation.nil? %>
  <meta name="title" content="<%=h @conversation.title %>" />
  <meta name="description" content="<%=h Sanitize.clean(@conversation.summary, :remove_contents => ['style','script']) %>" />
  <% if not @conversation.image.nil? %>
    <link rel="image_src" href="<%= @conversation.image.url(:panel) %>" />
  <% end %>
<% elsif not @issue.nil? %>
  <meta name="title" content="<%=h @issue.name %>" />
  <meta name="description" content="<%=h Sanitize.clean(@issue.summary, :remove_contents => ['style','script']) %>" />
  <% if not @issue.image.nil? %>
    <link rel="image_src" href="<%= @issue.image.url(:panel) %>" />
  <% end %>
<% elsif not @blog_post.nil? %>
  <meta name="title" content="The Common Blog: <%=h @blog_post.title %>" />
  <meta name="description" content="<%=h Sanitize.clean(@blog_post.summary, :remove_contents => ['style','script']) %>" />
  <link rel="image_src" href="<%= "/images/cc_podcast_small.jpg" %>" />
