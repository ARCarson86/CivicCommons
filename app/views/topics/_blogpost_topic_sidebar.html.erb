<div class="mod">
  <h3>Only show blog posts about:</h3>
  <ul class="simple-list block-link-list topic-filter">
    <% topics.each do |topic| %>
      <li>
        <%= content_item_topic_filter(topic, :blogpost) %>
        <% if topic.id.to_s == params[:topic] %>
           <%= link_to image_tag('blank.png'), blog_index_url(:author_id => params[:author_id]), :class => 'remove-filter', :title => 'Remove filter'%>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>


<style>

.simple-list li {
  position:relative;
}
.remove-filter {
  position:absolute;
  top: 7px;
  right: 3px;
  z-index: 1;
  border-bottom: none;

}

.simple-list ul {
  border-bottom: none;
}
ul.remove-filter {
  border-bottom: none;
}

</style>