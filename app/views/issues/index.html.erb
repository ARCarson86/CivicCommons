<h1>Search Issues</h1>
  <%= form_for @search do |f| %>
    <%= f.label "Issue description contains:" %>
    <%= f.text_field :description_contains %><br />
    <%= f.submit %>
  <% end %>

<h1>Listing Issues</h1>
<table>
  <tr>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @issues.each do |issue| %>
  <tr>
    <td><%= issue.description %></td>
    <td><%= link_to 'Show', issue %></td>
    <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
    <td><%= link_to 'Destroy', issue, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Issue', new_issue_path %>
